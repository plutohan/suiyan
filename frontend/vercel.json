{
  "buildCommand": "pnpm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "functions": {
    "api/**/*.js": {
      "runtime": "edge"
    }
  },
  "rewrites": [
    { "source": "/share/lottery/:id", "destination": "/api/lottery/:id" },
    { "source": "/((?!api/).*)", "destination": "/index.html" }
  ]
}
